<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.example.challenge.adapters.GitHubRepoAdapter.CallBack" />

        <variable
            name="repository"
            type="com.example.challenge.response.GitHubRepo" />
    </data>

    <carbon.widget.ConstraintLayout
        style="@style/RippleClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_2sdp"
        android:background="@color/colorWhite"
        android:onClick="@{view -> listener.onItemClicked(repository)}"
        android:paddingHorizontal="@dimen/_6sdp"
        android:paddingVertical="@dimen/_4sdp"
        app:carbon_cornerRadius="@dimen/_10sdp"
        app:carbon_elevation="@dimen/_1sdp">

        <TextView
            android:id="@+id/tv_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itemGitHubRepo_name"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:text="@{repository.name}"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@id/tv_name_title"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Challenge" />


        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="@{repository.description}"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name_title"
            tools:text="fdfbdrt.lgkgdlrvgjwerlogjsrptijnslgsjnrg;sifjnseerijgndelhxdfldjrtnlcfgjntkjdrbpsuyj[frroguhdr6[oidtjseiu5jft'yoidr" />

        <TextView
            android:id="@+id/tv_primary_lang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="@string/itemGitHubRepo_primary_language"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_desc" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@{repository.primaryLanguage.language}"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_primary_lang_title"
            app:layout_constraintStart_toEndOf="@id/tv_primary_lang_title"
            app:layout_constraintTop_toTopOf="@id/tv_primary_lang_title"
            tools:text="Java" />


    </carbon.widget.ConstraintLayout>
</layout>